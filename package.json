{
  "name": "fastmcp-boilerplate",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/server.ts",
    "dev": "fastmcp dev src/server.ts",
    "lint": "prettier --check . && eslint . && tsc --noEmit && node scripts/validate-openapi.js",
    "test": "vitest run",
    "format": "prettier --write . && eslint --fix .",
    "validate-openapi": "node scripts/validate-openapi.js",
    "prepare": "husky"
  },
  "keywords": [
    "fastmcp",
    "mcp",
    "boilerplate"
  ],
  "repository": {
    "url": "https://github.com/punkpeye/fastmcp-boilerplate"
  },
  "author": "Frank Fiegel <frank@glama.ai>",
  "homepage": "https://glama.ai/mcp",
  "type": "module",
  "license": "MIT",
  "description": "A boilerplate for FastMCP",
  "dependencies": {
    "fastmcp": "^3.15.2",
    "zod": "^3.24.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.ts": [
      "npm run test"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@redocly/cli": "^2.0.8",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-perfectionist": "^4.12.3",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.6",
    "openapi-types": "^12.1.3",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3",
    "yaml": "^2.8.1"
  }
}
