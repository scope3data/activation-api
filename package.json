{
  "name": "scope3-campaign-api-mcp",
  "version": "1.0.1",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "dev": "fastmcp dev src/server.ts",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "lint": "prettier --check . && eslint . && tsc --noEmit && npm run validate:openapi",
    "test": "vitest run",
    "test:cache": "vitest run src/__tests__/caching/",
    "test:contracts": "vitest run src/__tests__/contracts/",
    "test:integration": "vitest run src/__tests__/caching/ src/__tests__/examples/",
    "test:error-scenarios": "vitest run src/__tests__/error-scenarios/",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:cache": "vitest run --coverage --config vitest.cache.config.ts",
    "format": "prettier --write . && eslint --fix .",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "check:openapi": "echo '⚠️  Please run: npm run generate:openapi after modifying tools to keep OpenAPI spec current'",
    "validate:openapi": "node scripts/validate-openapi.js",
    "ci:local": "bash scripts/ci-check.sh",
    "docs:dev": "npx mintlify dev",
    "docs:validate": "npx mintlify broken-links && npx mintlify openapi-check openapi.yaml",
    "docs:validate:links": "npx mintlify broken-links",
    "docs:validate:api-links": "node scripts/validate-api-links-local.js",
    "docs:validate:openapi": "npx mintlify openapi-check openapi.yaml",
    "setup:bigquery": "tsx scripts/setup-bigquery-signals.ts",
    "prebuild": "echo 'Skipping OpenAPI generation to prevent CI hang'",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "scope3",
    "advertising",
    "campaigns",
    "programmatic"
  ],
  "repository": {
    "url": "https://github.com/conductor/activation-api"
  },
  "author": "Conductor",
  "homepage": "https://github.com/conductor/activation-api",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=8.0.0"
  },
  "description": "MCP server for Scope3 campaign creation and management",
  "dependencies": {
    "@adcp/client": "^0.2.2",
    "@google-cloud/bigquery": "^8.1.1",
    "@google-cloud/storage": "^7.17.1",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "@types/node": "^24.3.1",
    "@types/uuid": "^10.0.0",
    "express-rate-limit": "^7.4.1",
    "fastmcp": "^3.15.2",
    "jose": "^5.10.0",
    "posthog-node": "^5.9.1",
    "prom-client": "^15.1.3",
    "typescript": "^5.8.3",
    "uuid": "^13.0.0",
    "winston": "^3.15.0",
    "zod": "^3.24.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "src/tools/**/*.ts": [
      "echo 'Tool modified - please run: npm run generate:openapi'",
      "prettier --write",
      "eslint --fix"
    ],
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{test,spec}.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@redocly/cli": "^2.0.8",
    "@tsconfig/node22": "^22.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-perfectionist": "^4.12.3",
    "glob": "^11.0.0",
    "graphql": "^16.8.1",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.6",
    "mintlify": "^4.2.112",
    "msw": "^2.11.2",
    "openapi-types": "^12.1.3",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3",
    "yaml": "^2.8.1"
  }
}
