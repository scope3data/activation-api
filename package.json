{
  "name": "scope3-campaign-api-mcp",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run generate:openapi && tsc",
    "start": "node dist/server.js",
    "dev": "fastmcp dev src/server.ts",
    "lint": "prettier --check . && eslint . && tsc --noEmit && npm run validate:openapi",
    "test": "vitest run",
    "format": "prettier --write . && eslint --fix .",
    "generate:openapi": "tsx scripts/generate-openapi.ts",
    "validate:openapi": "node scripts/validate-openapi.js",
    "ci:local": "bash scripts/ci-check.sh",
    "docs:dev": "mintlify dev",
    "docs:validate": "mintlify broken-links && mintlify openapi-check openapi.yaml",
    "docs:validate:links": "mintlify broken-links",
    "docs:validate:openapi": "mintlify openapi-check openapi.yaml",
    "prebuild": "npm run generate:openapi",
    "prepare": "husky",
    "postinstall": "npm run build"
  },
  "keywords": [
    "mcp",
    "scope3",
    "advertising",
    "campaigns",
    "programmatic"
  ],
  "repository": {
    "url": "https://github.com/conductor/activation-api"
  },
  "author": "Conductor",
  "homepage": "https://github.com/conductor/activation-api",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=8.0.0"
  },
  "description": "MCP server for Scope3 campaign creation and management",
  "dependencies": {
    "@types/node": "^24.3.1",
    "fastmcp": "^3.15.2",
    "npm": "^11.6.0",
    "typescript": "^5.8.3",
    "zod": "^3.24.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "src/tools/**/*.ts": [
      "npm run generate:openapi",
      "git add openapi.yaml"
    ],
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{test,spec}.ts": [
      "npm run test"
    ],
    "openapi.yaml": [
      "npm run validate:openapi"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@redocly/cli": "^2.0.8",
    "@tsconfig/node22": "^22.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-perfectionist": "^4.12.3",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.6",
    "openapi-types": "^12.1.3",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.32.0",
    "vitest": "^3.1.3",
    "yaml": "^2.8.1"
  }
}
